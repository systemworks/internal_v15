<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_project_bug_log_action" model="ir.actions.act_window">
            <field name="name">Bug Log</field>
            <field name="res_model">project.task.bug.log</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_filter_active': 1}</field>
            <field name="help"
                   type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add an Bug Log
                </p>
            </field>
        </record>
        <record id="project_bug_log_view_tree"
                model="ir.ui.view">
            <field name="name">project.task.bug.log.view.tree</field>
            <field name="model">project.task.bug.log</field>
            <field name="arch"
                   type="xml">
                <tree string="Bug Log">
                    <field name="name" />
                    <field name="description"/>
                    <field name="related_task"/>
                    <field name="logged_by"/>
                    <field name="logged_on" />
                </tree>
            </field>
        </record>

    </data>
</odoo>

