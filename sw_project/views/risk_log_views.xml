<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_project_risk_log_action" model="ir.actions.act_window">
            <field name="name">Risk.Log</field>
            <field name="res_model">project.risk.log</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_filter_active': 1}</field>
            <field name="help"
                   type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add an Risk Log
                </p>
            </field>
        </record>
        <record id="project_risk_log_view_tree"
                model="ir.ui.view">
            <field name="name">project.risk.log.view.tree</field>
            <field name="model">project.risk.log</field>
            <field name="arch"
                   type="xml">
                <tree string="Risk Log">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="related_task"/>
                    <field name="logged_by"/>
                    <field name="logged_on"/>
                    <field name="log_source"/>
                    <field name="related_meeting"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>

