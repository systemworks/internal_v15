<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_project_decision_log_action" model="ir.actions.act_window">
            <field name="name">Decision Log</field>
            <field name="res_model">project.decision.log</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_filter_active': 1}</field>
            <field name="help"
                   type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add an Decision Log
                </p>
            </field>
        </record>

        <record model="ir.ui.view" id="project_decision_log_view_form">
            <field name="name">project.decision.log.view.form</field>
            <field name="model">project.decision.log</field>
            <field name="arch" type="xml">
                <form string="Decision Log">
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="description" widget="html"/>
                        </group>
                        <group>
                            <field name="related_task"/>
                            <field name="logged_by"/>
                            <field name="logged_on"/>
                            <field name="log_source"/>
                            <field name="related_meeting"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="project_decision_log_view_tree"
                model="ir.ui.view">
            <field name="name">project.decision.log.view.tree</field>
            <field name="model">project.decision.log</field>
            <field name="arch"
                   type="xml">
                <tree string="Decision Log">
                    <field name="name"/>
                    <field name="description" widget="html"/>
                    <field name="related_task"/>
                    <field name="logged_by"/>
                    <field name="logged_on"/>
                    <field name="log_source"/>
                    <field name="related_meeting"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>

